#!/bin/sh
#
# Refresh the site's content
#

umask 0002

# Terminate displaying the specified error message
error()
{
  echo '[Error]' "$@" 1>&2
  exit 1
}

if [ $(hostname) = istlab ] ; then
  BASE=/home/dds/web/balab
  rm -rf $BASE/new
  mkdir $BASE/new
  chgrp iweb $BASE/new

  awk '/^email:/{print $2}' content/members/* >lists/balab.txt
else
  BASE=balab
  mkdir -p $BASE/new
fi

# See if used categories are valid
if ! find content -type f |
  xargs grep -h '^category:' |
  sed 's/ *$//' |
  sort -u |
  diff doc/valid_categories - ; then
    error 'Invalid content category used; see above'
fi

# Check for common errors in publications
grep -iHn 'doi.*=.*https://doi\.org' content/pubs.bib && error 'DOIs should not include a URL'
grep -iHn '^[ 	]*year.*=[ 	]*{{' content/pubs.bib && error 'Years should not be specified with double braces'
grep -iHn '^[ 	]*doi[ 	]=' content/pubs.bib && error 'Specify XEdoi rather than DOI'
grep -iHn '^[ 	]*url[ 	]*=' content/pubs.bib && error 'Specify XEurl rather than URL'

chmod 2775 $BASE/new
pelican content/ --output=$BASE/new

#Sanity check
if test $(stat -c %s $BASE/new/category/members.html) -gt 20000 ; then
  echo "Members: OK"
else
 error "File $BASE/new/category/members.html appears truncated, please check members file and update again!"
fi

if test $(stat -c %s $BASE/new/category/software.html) -gt 7000 ; then
  echo "Software: OK"
else
 error "File $BASE/new/category/software.html appears truncated, please check software file and update again!"
fi

if test $(stat -c %s $BASE/new/category/projects.html) -gt 10000 ; then
  echo "Projects: OK"
else
 error "File $BASE/new/category/projects.html appears truncated, please check projects file and update again!"
fi

if test $(stat -c %s $BASE/new/category/alumni.html) -gt 5000 ; then
  echo "Alumni: OK"
else
 error "File $BASE/new/category/alumni.html appears truncated, please check alumni file and update again!"
fi

if test $(stat -c %s $BASE/new/category/yearly-reports.html) -gt 5000 ; then
  echo "Yearly reports: OK"
else
 error "File $BASE/new/category/yearly-reports.html appears truncated, please check yearly-reports file and update again!"
fi

test -d $BASE/current && mv $BASE/current $BASE/old
mv $BASE/new $BASE/current
rm -rf $BASE/old
